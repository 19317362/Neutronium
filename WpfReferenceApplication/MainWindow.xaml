<Window x:Class="WpfReferenceApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfReferenceApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock Width="100" Text="{Binding Path=Counter}"/>
            <TextBlock Width="100" Text="{Binding Path=State}"/>
        </StackPanel>
        <Button Width="100" Height="30" Command="{Binding Path=Count}" Content="Count" />
    </Grid>
</Window>
